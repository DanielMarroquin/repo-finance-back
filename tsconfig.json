{
  "compilerOptions": {
    "target": "ES6",
    "module": "commonjs",
    "rootDir": ".",
    "outDir": "./dist",
    "esModuleInterop": true,           
    "strict": true,
    "experimentalDecorators": true,    
    "emitDecoratorMetadata": true,    
    "skipLibCheck": true,              
    "forceConsistentCasingInFileNames": true
  },
  "include": ["src/**/*", "api/**/*"] , 
  "exclude": ["node_modules"]
}